# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/taxi_express_rdc?schema=public"

# JWT Auth
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Server
PORT=5000
NODE_ENV=development
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# OpenAI for AI Support
OPENAI_API_KEY=your_openai_api_key_here

# Mobile Money Integration (UniPesa)
UNIPESA_API_KEY=your_unipesa_api_key_here
UNIPESA_SECRET=your_unipesa_secret_here
UNIPESA_SANDBOX=true

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Logging
LOG_LEVEL=debug

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
